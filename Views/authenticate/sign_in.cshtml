
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>sign_in</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link rel="stylesheet" href="~/Styles/authenticate.css">
    <link rel="stylesheet" href="~/Styles/boots.css">
</head>
    <body>
        <main class="page payment-page">
            <section class="payment-form dark">
                <div class="container">
                    <div class="block-heading">
                        <h2>Sign In</h2>
                        <p>
                            Plan Your Next Trip
                        </p>
                    </div>
                    <div>
                        <form action="authenticate" method="post" autocomplete="off">
                            <div class="card-details">
                                <div class="row">
                                    <div class="form-group col-sm-12">
                                        <label>Email: </label><br />
                                        <input name="IV_Email" class="text-box" type="text" />
                                    </div>
                                    <div class="form-group col-sm-12">
                                        <label>Password: </label><br />
                                        <input name="IV_Password" class="text-box" type="password" />
                                    </div>
                                    <span style="color:red;">@TempData["ErrorMsg"]</span>

                                    <div class="form-group col-sm-12">
                                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                                    </div>
                                </div>
                                <a title="sign up" style="color: #007bff; font-size: 20px; "
                                   href=@Url.Action("sign_up", "authenticate")
                                   method="post">Don't have an account yet? Sign up today</a>
                            </div>
                        </form>

                    </div>
                </div>
            </section>
        </main>
    </body>
</html>