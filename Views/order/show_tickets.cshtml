@model Project___Intro_To_Computer_Networking.ViewModel.cls_ticketDetailsVM
@using Project___Intro_To_Computer_Networking.Models;
<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/Styles/flight-ticket.css" />
    <link rel="stylesheet" href="~/Styles/boots.css" />
</head>
<body>
    <div style="display: flex; justify-content: center;">
        <div class="card-details">
            <div class="row">
                <a title="home page" style="color: #007bff; font-size: 20px; "
                   href=@Url.Action("index", "home")
                   method="post">Return To Home Page</a>
            </div>
        </div>
    </div>
    <div style="display:grid; grid-template-columns: 1fr,1fr;">
        @foreach (cls_ticketDetails ticket in Model.tickets)
        {
            <div>
                <div class="box">
                    <div class="ticket">
                        <span class="airline">A&K Travel Agency</span>
                        <span class="airline airlineslip" style="left:420px;">A&K Travel Agency</span>
                        <div class="content">
                            <span class="jfk">@ticket.flight.get_departure_airport_code()</span>
                            <span class="plane">
                                <?xml version="1.0" ?>
                                <svg clip-rule="evenodd" fill-rule="evenodd" height="60" width="60" image-rendering="optimizeQuality" shape-rendering="geometricPrecision" text-rendering="geometricPrecision" viewBox="0 0 500 500" xmlns="http://www.w3.org/2000/svg"><g stroke="#222"><line fill="none" stroke-linecap="round" stroke-width="30" x1="300" x2="55" y1="390" y2="390" /><path d="M98 325c-9 10 10 16 25 6l311-156c24-17 35-25 42-50 2-15-46-11-78-7-15 1-34 10-42 16l-56 35 1-1-169-31c-14-3-24-5-37-1-10 5-18 10-27 18l122 72c4 3 5 7 1 9l-44 27-75-15c-10-2-18-4-28 0-8 4-14 9-20 15l74 63z" fill="#222" stroke-linejoin="round" stroke-width="10" /></g></svg>
                            </span>
                            <span class="sfo">@ticket.flight.get_landing_airport_code()</span>

                            <span class="jfk jfkslip">@ticket.flight.get_departure_airport_code()</span>
                            <span class="plane planeslip">
                                <?xml version="1.0" ?>
                                <svg clip-rule="evenodd" fill-rule="evenodd" height="50" width="50" image-rendering="optimizeQuality" shape-rendering="geometricPrecision" text-rendering="geometricPrecision" viewBox="0 0 500 500" xmlns="http://www.w3.org/2000/svg"><g stroke="#222"><line fill="none" stroke-linecap="round" stroke-width="30" x1="300" x2="55" y1="390" y2="390" /><path d="M98 325c-9 10 10 16 25 6l311-156c24-17 35-25 42-50 2-15-46-11-78-7-15 1-34 10-42 16l-56 35 1-1-169-31c-14-3-24-5-37-1-10 5-18 10-27 18l122 72c4 3 5 7 1 9l-44 27-75-15c-10-2-18-4-28 0-8 4-14 9-20 15l74 63z" fill="#222" stroke-linejoin="round" stroke-width="10" /></g></svg>
                            </span>
                            <span class="sfo sfoslip">@ticket.flight.get_landing_airport_code()</span>
                            <div class="sub-content">
                                <span class="name">PASSENGER NAME<br /><span>@ticket.passenger_name</span></span>
                                <span class="flight">FLIGHT N&deg;<br /><span>@ticket.flight.flight_identifier</span></span>
                                <span class="gate">GATE<br /><span>@ticket.flight.gate_identifier</span></span>
                                <span class="seat">SEAT<br /><span>@ticket.seat_identifier</span></span>
                                <span class="boardingtime">BOARDING TIME<br /><span>@ticket.flight.get_date()</span></span>

                                <span class="flight flightslip">FLIGHT N&deg;<br /><span>@ticket.flight.flight_identifier</span></span>
                                <span class="seat seatslip">SEAT<br /><span>@ticket.seat_identifier</span></span>
                                <span class="name nameslip">PASSENGER NAME<br /><span>@ticket.passenger_name</span></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
